<% content_for :header_tags do %>
    <%= javascript_include_tag 'action_companies', :plugin => 'redmine_crm' %>
<% end %>

<%= render 'companies/search'%>
<%= link_to t(:save),'', id: 'save_crm_action', data: {actionid: @crm_action.id}%>

<div style="display:table">
  <div class="droppable" style="display:table-cell;padding:10px;">
    <p><%= t(:available_companies)%> :</p>
    <%= render 'companies/list', companies: @companies, parent_id: "available_companies" %>
  </div>

  <div class="droppable" style="display:table-cell">
    <p><%= t(:assigned_companies)%> :</p>
    <%= render 'companies/list', companies: @crm_action.companies, parent_id: "assigned_companies" %>
  </div>
</div>
