<div class='contextual'>
  <%= link_to t(:edit), edit_client_path(@client), :class => 'icon icon-edit' %>
  <%= link_to t(:delete), @client, method: :delete,
              data: {confirm: "Are you sure?"}, :class => 'icon icon-del' %>
</div>
<h2><%= @client %> </h2>
<!-- TODO: maybe use helpers to combine forms and shows -->
<%= render 'description' %>

<p style='clear:both'></p>
<fieldset style='float:left;'>
  <% if @client.project.present? %>
  <legend><%= l(:label_attachment_plural) %> (<%= @client.project.name %>) </legend>
  <%= form_for @client do |atts| %>
    <%= link_to_attachments(@client) %>
    <br>
    <a class='icon icon-add' onclick='$("#upload").toggle()' > <%= l(:label_attachment_plural) %> <%= t('upload') %> </a>
    <div id="upload" style='display:none'>
    <%= render 'attachments/form', :locals => {:container => @client} %>
      <br>
    <%= atts.submit t('upload') %>
    </div>
  <% end %>
  <% else %>
     <legend ><%= l(:label_attachment_plural) %></legend><%= %>
      <p style="color:red;font-weight: bold"><%= t(:message_no_files_for_client) %>
  <% end %>
</fieldset>
<fieldset>
  <legend><%= l(:crmcomment) %> </legend>
  <% @client.crmcomments.each do |c| %>
      <%= render 'crmcomments/comment', :c => c, :parent => @client %>
  <% end %>

  <hr>
  <p><b><%= t(:new_model, :model => t(:crmcomment)) %></b></p>
  <%= render 'crmcomments/form', {:parent => @client, :comment => @comment} %>
</fieldset>

