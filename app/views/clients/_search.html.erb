<fieldset class='collapsible collapsed'>
  <legend onclick='toggleFieldset(this);'>Filter</legend>
  <div style="display: none;">
    <%= form_tag clients_path, :method => 'get' do%>
        <table>
          <% if params[:project_id].present? %>
              <%= hidden_field_tag :project_id, params[:project_id] %>
          <% end %>
          <tr>
            <td><%= label_tag t_att(:client, :last_name) %></td>
            <td>  <%= select_tag "search[last_name]", options_for_select(Client.uniq.pluck(:last_name)), include_blank: true %> </td>
          </tr>
          <tr>
            <td><%= label_tag t_att(:client, :department) %></td>
            <td><%= select_tag "search[department]", options_for_select(Client.uniq.pluck(:department)), include_blank: true %> </td>
          </tr>
          <tr>
            <td><%= label_tag  t(:company) %></td>
            <td><%= select_tag "search[company_id]", options_for_select(Company.all.collect{|c| [c.name, c.id]}), include_blank: true %> </td>
          </tr>
        </table>
        <%= submit_tag   t 'search' %>
    <% end %>
  </div>
</fieldset>