<% highlight = 'warning' if reminder.overdue? %>
<% highlight = 'checked' if reminder.closed? %>
<div style="display: table-row;" >
  <div class="table_item icon icon-<%=highlight%>"> &NonBreakingSpace;&NonBreakingSpace; </div>
  <div class="table_item"> <%= I18n.l(reminder.due, :format => :short) %></div>

  <div class="table_item"><%= link_to reminder.title, reminder_path(reminder) %></div>

  <div class="table_item"><%= link_to '.ics', reminder_path(reminder, format: 'ics'), class: "icon icon-attachment" %></div>

  <div class="table_item"><%= link_to t(:finish), close_reminder_path(reminder), method: :post, class: "icon icon-checked" unless reminder.closed?%></div>

  <div class="table_item"><%= link_to t(:delete), reminder, method: :delete, data: {confirm: t(:destroy_confirm)}, :class => 'icon icon-del' %></div>
  <br>
</div>